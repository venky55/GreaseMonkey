<div class="page-header">
  <h1><a href="<%= @listing.url %>"><%= @listing.title %></a><br> <small>Submitted by <%= @listing.user.email %></small></h1>
</div>


<% if @listing.user == current_user -%>
	<div class="btn-group">
		<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-default" %>
		<%= link_to 'Destroy', @listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
	</div>
<% end %>